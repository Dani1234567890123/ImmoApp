			<Label Grid.Row="4" Grid.Column="0" Content="Wasserzähler"/>
			<TextBox x:Name="tbWasserzähler" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Stretch" Margin="4" TextWrapping="NoWrap" MaxLines="1"/>
			<Label Grid.Row="5" Grid.Column="0" Content="Gaszähler"/>
			<TextBox x:Name="tbGaszähler" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Stretch" Margin="4" TextWrapping="NoWrap" MaxLines="1"/>
			<Label Grid.Row="6" Grid.Column="0" Content="Baujahr"/>
			<Grid x:Name="grdBaujahr" Grid.Row="6"  Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="30*"/>
					<ColumnDefinition Width="70*"/>
				</Grid.ColumnDefinitions>
				<TextBox x:Name="tbBaujahr" Grid.Column="0"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="4" TextWrapping="NoWrap"  MaxLines="1"  />
			</Grid>
			<Grid x:Name="Notiz" Grid.Row="7" Grid.Column="0">
				<Grid.RowDefinitions>
					<RowDefinition Height="5*"/>
					<RowDefinition Height="10*"/>
				</Grid.RowDefinitions>
				<Label Grid.Row="0" Content="Notiz"/>
				<Button x:Name="btnNotiz" Grid.Row="1" Margin="0,10,5,10" MinWidth="100" MaxWidth="170" MinHeight ="40" MaxHeight="50" Content="Zufügen"/>
			</Grid>
			<TextBox x:Name="tbNotiz" Grid.Row="7" Grid.Column="1" HorizontalAlignment="Stretch" Margin="4" TextWrapping="Wrap" AcceptsReturn="True" />
		</Grid>
		<Grid x:Name="NotizDataGrid" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3">
			<Grid.RowDefinitions>
